<form action="/add" method="POST">
  <div class="form-group">
    <label class="lead" for="exampleInputEmail1"><strong>New Todo Item</strong></label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter a title" name="title" required>
  </div>
  <div class="form-group">
     <textarea class="form-control" name="body" id="exampleFormControlTextarea1" rows="3" placeholder="Write your todo item" required></textarea>
  </div>
  <button type="submit" class="btn btn-outline-primary btn-block lead">Submit</button>
</form>