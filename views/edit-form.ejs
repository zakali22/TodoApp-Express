
<form method="POST" action="/edit/<%= todo._id %>">
  <div class="form-group">
    <label for="exampleInputEmail1">Edit Todo Item</label>
    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="text" value="<%= todo.text %>">
  </div>
  <div class="form-group">
	<textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="body"><%= todo.body %></textarea>  
  </div>
  <button type="submit" class="btn btn-outline-primary">Submit</button>
  <a href="/"><button type="submit" class="btn btn-outline-danger">Cancel</button></a>
</form>